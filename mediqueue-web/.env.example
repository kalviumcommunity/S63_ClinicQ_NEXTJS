# Server-side variables (NOT exposed to browser)
# PostgreSQL connection string used by Prisma / Supabase / database client
DATABASE_URL=postgres://username:password@localhost:5432/mediqueue

# JWT or auth secret for NextAuth / session management
AUTH_SECRET=replace-with-strong-random-value

# SMS provider secrets (Twilio / MSG91 / Fast2SMS, etc.)
SMS_PROVIDER_API_KEY=your-sms-provider-api-key
SMS_PROVIDER_SENDER_ID=MEDIQUEUE

# Client-side variables (prefixed with NEXT_PUBLIC_)
# Base URL for the public API used by the web app
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# Public flag to toggle demo banners or non-sensitive experimentation
NEXT_PUBLIC_MEDIQUEUE_ENV=local

